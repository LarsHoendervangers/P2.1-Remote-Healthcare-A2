        <Rectangle HorizontalAlignment="Left" Height="469" Margin="391,545,0,0" Stroke="Black" VerticalAlignment="Top" Width="684"/>
        <Label Content="Chat:&#xD;&#xA;" HorizontalAlignment="Left" Margin="391,495,0,0" VerticalAlignment="Top" FontSize="28" Height="45" FontWeight="Bold"/>
        <TextBox HorizontalAlignment="Left" Margin="407,955,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="575" Height="40" FontSize="20"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="997,955,0,0" VerticalAlignment="Top" Height="40" Width="60" FontSize="16" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
