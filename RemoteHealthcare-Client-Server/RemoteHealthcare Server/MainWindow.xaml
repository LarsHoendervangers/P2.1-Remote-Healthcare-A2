<Window x:Class="RemoteHealthcare_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteHealthcare_Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <StackPanel Width="Auto" DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Start" Width="Auto" Click="Button_StartServer"/>
            <Button Content="Stop" Width="Auto" Click="Button_StopServer"/>
        </StackPanel>
        <ScrollViewer DockPanel.Dock="Left">
            <TextBlock Name="debugTextBlock" Text="Server Output" DockPanel.Dock="Left"/>
        </ScrollViewer>
        <StackPanel Width="Auto" DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Send" Width="Auto" Click="Button_SendMessage"/>
            <TextBox Text="Enter text to chat" TextWrapping="Wrap" Width="Auto" Name="ChatInputBox"/>
        </StackPanel>
    </DockPanel>
</Window>
